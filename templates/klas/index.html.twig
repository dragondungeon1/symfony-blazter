{% extends 'base.html.twig' %}

{% block title %}Klas index{% endblock %}

{% block body %}
    <h1>Klas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kla in klas %}
            <tr>
                <td>{{ kla.id }}</td>
                <td>{{ kla.name }}</td>
                <td>
                    <a href="{{ path('klas_show', {'id': kla.id}) }}">show</a>
                    <a href="{{ path('klas_edit', {'id': kla.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('klas_new') }}">Create new</a>
{% endblock %}
